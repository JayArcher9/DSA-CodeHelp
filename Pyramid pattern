#include <iostream>
using namespace std;

int main() {
  int n;
  cin >> n;

  int i = 1;

  while (i <= n) {

    int spc = n - i;

    while (spc > 0) {
      cout << " ";
      spc--;
    }

    int j = 1;

    while (j <= i) {

      cout << j;
      j++;
    }

    int start = i - 1;

    while (start>0) {
      cout << start;
      start--;
    }

    cout << endl;
    i++;
  }
}
